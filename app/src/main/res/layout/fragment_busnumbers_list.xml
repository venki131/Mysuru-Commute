<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.RecyclerView

        android:id="@+id/list"
        android:name="com.example.venkateshkashyap.mysuru_commute.fragments.BusNumbersFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layoutManager="LinearLayoutManager"
        tools:context="com.example.venkateshkashyap.mysuru_commute.fragments.BusNumbersFragment"
        tools:listitem="@layout/fragment_busnumbers" />

    <include
        android:id="@+id/rl_progress_view"
        layout="@layout/progress_layout" />

    <include
        android:id="@+id/rl_error_layout"
        layout="@layout/error_layout" />
</RelativeLayout>